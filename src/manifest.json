{
    "manifest_version": 2,
    "name": "__MSG_extensionName__",
    "description": "__MSG_extensionDescription__",
    "version": "1.1.0",
    "homepage_url": "https://github.com/mozillabrasil/sumo_live_helper",
    "default_locale": "en",
    "author": "Mozilla Brasil, Jhonatas Rodrigues, Wesley Branton, Danny Colin",
    "applications": {
        "gecko": {
            "strict_min_version": "58.0",
            "id": "sumo_live_helper@mozillabr.org"
        }
    },
    "icons": {
        "16": "/res/logo/sumo.svg",
        "32": "/res/logo/sumo.svg",
        "64": "/res/logo/sumo.svg"
    },
    "browser_action": {
        "browser_style": true,
        "default_icon": {
          "16": "/res/logo/sumo.svg",
          "32": "/res/logo/sumo.svg",
          "64": "/res/logo/sumo.svg"
        },
        "default_title": "__MSG_extensionName__"
    },
    "background": {
        "scripts": ["/js/background.js"]
    },
    "options_ui": {
        "browser_style": false,
        "open_in_tab": true,
        "page": "html/preferences.html"
    },
    "sidebar_action": {
        "default_icon": "/res/logo/sumo.svg",
        "default_title": "__MSG_extensionName__",
        "default_panel": "html/popup.html?view=sidebar",
        "open_at_install": false
    },
    "commands": {
        "_execute_sidebar_action": {
            "suggested_key": {
                "default": "Ctrl+Shift+L"
            }
        }
    },
    "permissions": [
        "alarms",
        "tabs",
        "browserSettings",
        "activeTab",
        "storage",
        "notifications"
    ]
}
